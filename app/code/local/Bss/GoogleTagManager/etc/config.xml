<config>
	<modules>
		<Bss_GoogleTagManager>
			<version>1.1.1</version>
		</Bss_GoogleTagManager>
	</modules>
	<global>
		<blocks>
			<googletagmanager>
				<class>Bss_GoogleTagManager_Block</class>
			</googletagmanager>
		</blocks>
		<helpers>
			<googletagmanager>
				<class>Bss_GoogleTagManager_Helper</class>
			</googletagmanager>
		</helpers>
	</global>
	<frontend>
        <layout>
            <updates>
                <googletagmanager>
                    <file>bss/googletagmanager.xml</file>
                </googletagmanager>
            </updates>
        </layout>
    </frontend>
</config> 